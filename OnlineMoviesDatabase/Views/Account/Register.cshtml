@model OnlineMovieDatabase.ViewModels.RegisterViewModel;
<h2>Регистрация нового пользователя</h2>


@{
    ViewData["Title"] = "Регистрация";
}


<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Name">Введите имя пользователя</label><br />
            <input type="text" asp-for="Name" />
            <span class="validation-error" asp-validation-for="Name"></span>
        </div>
        <div>
            <label asp-for="Email">Введите адрес электронной почты</label><br />
            <input type="text" asp-for="Email" />
            <span class="validation-error" asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="Password">Введите пароль</label><br />
            <input asp-for="Password" />
            <span class="validation-error" asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="PasswordConfirm">Повторите пароль</label><br />
            <input asp-for="PasswordConfirm" />
            <span class="validation-error" asp-validation-for="PasswordConfirm"></span>
        </div>
        <div>
            <input class="btn btn-primary" type="submit" value="Регистрация" />
        </div>
    </div>
</form>