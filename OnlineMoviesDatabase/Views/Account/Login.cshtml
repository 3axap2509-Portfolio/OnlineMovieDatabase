@model OnlineMovieDatabase.ViewModels.LoginViewModel

<h2>Вход на сайт</h2>

<a asp-action="Register" asp-controller="Account">Регистрация</a>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Email">Введите адрес электронной почты</label><br />
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="Password">Введите пароль</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <input type="submit" value="Войти" class="btn btn-primary" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="smalluseravatar">
            <a asp-action="AuthWith" asp-controller="Account" asp-route-ServiceName="Github">
                <img src="~/Static/Images/OauthServices/github.png" alt="Авторизация с помощью Github" />
            </a>
        </div>
        <div class="smalluseravatar">
            <a asp-action="AuthWith" asp-controller="Account" asp-route-ServiceName="Vk">
                <img src="~/Static/Images/OauthServices/vk.png" alt="Авторизация с помощью Vk" />
            </a>
        </div>
    </div>


</form>